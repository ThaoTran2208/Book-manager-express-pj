extends ../layouts/common
block content
  .container
    .row
      .col-12
      
        h3.mt-3 Sign Up
        
        if errors
          each error in errors
            .alert.alert-danger= error
        
        form(action="/signup" method="post")
          .form-group
              label Name
              input.form-control(type="text" name="name" value= values ? values.name : "")
          .form-group
              label Phone
              input.form-control(type="text" name="phone" value= values ? values.phone : "")
          .form-group
              label Email
              input.form-control(type="text" name="email" value= values ? values.email : "")
          .form-group
              label Password
              input.form-control(type="password" name="password" value= values ? values.password : "")

          button.btn.btn-primary Sign Up
          
          .mt-2 Already have an account? 
            a(href='/auth/login') Login